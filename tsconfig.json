{
  "compilerOptions": {
    "target": "es6",
    "lib": ["dom", "dom.iterable", "esnext"],
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "jsx": "react-jsx",
    "declaration": true,
    "outDir": "./dist",
    "rootDir": "src",
    "typeRoots": ["node_modules/@types", "styles/styled.d.ts"]
  },
  "include": ["**/*.tsx", "**/*.ts", "styles/styled.d.ts"],
  "exclude": ["node_modules", "dist", "**/*.stories.tsx"]
}
